<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/dark_transparent_75">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <rs.ac.metropolitan.cs330.znamenitosti.gui.FancyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Možete odabrati jedan grad na početku."/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/help_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"/>
            <rs.ac.metropolitan.cs330.znamenitosti.gui.FancyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/help_camera"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="Pronađi i uslikaj znamenitost."/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/help_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_map"/>
            <rs.ac.metropolitan.cs330.znamenitosti.gui.FancyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/help_map"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="Pomoć prikazuje lokaciju znamenitosti."/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/help_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_locked"/>
            <rs.ac.metropolitan.cs330.znamenitosti.gui.FancyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/help_locked"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="Otključajte sledeći grad kada pređete 50% znamenitosti."/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>